{
  "name": "next-ts-starter",
  "version": "1.0.0",
  "description": "A Next powered starter which include support for Relay with GraphQL, SSR / SSG support, codegen, styled component / system and framer motion",
  "scripts": {
    "relay": "relay-compiler",
    "relay:watch": "relay-compiler --watch",
    "dev": "concurrently  \"yarn dev:next\" \"yarn relay:watch\" ",
    "dev:next": "next",
    "prebuild": "gql-gen",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache --fix --report-unused-disable-directives src/**/*.{js,ts,jsx,tsx}",
    "ts:check": "tsc --noEmit",
    "test": "jest --runInBand --coverage=false",
    "test:ci": "yarn test --ci",
    "test:watch": "yarn test --watch"
  },
  "keywords": [
    "starter",
    "template",
    "styled-components",
    "styled-system",
    "framer-motion",
    "graphql",
    "graphql-codegen",
    "codegen",
    "relay",
    "ssr",
    "next",
    "nextjs",
    "react",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/Liinkiing/next-ts-graphql-relay",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Liinkiing/next-ts-graphql-relay/issues"
  },
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "dependencies": {
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.8",
    "babel-jest": "^26.3.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^2.3.0",
    "jest": "^26.3.0",
    "jest-styled-components": "^7.0.2",
    "next": "^9.5.1",
    "next-compose-plugins": "^2.2.0",
    "next-fonts": "^1.4.0",
    "next-images": "^1.4.1",
    "nprogress": "^0.2.0",
    "polished": "^3.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-relay": "^10.0.1",
    "react-relay-network-modern": "^4.7.4",
    "styled-components": "^5.1.1",
    "styled-system": "^5.1.5",
    "ts-jest": "^26.1.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-relay": "^7.0.8",
    "@types/relay-config": "^6.0.1",
    "@types/relay-runtime": "^10.0.3",
    "@types/styled-components": "^5.1.2",
    "@types/styled-system": "^5.1.10",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-plugin-relay": "^10.0.1",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "graphql": "^15.3.0",
    "graphql-compiler": "^1.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "relay-compiler": "^10.0.1",
    "relay-compiler-language-typescript": "^13.0.1",
    "relay-config": "^10.0.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest -c jest.config.js --bail --runInBand --findRelatedTests --coverage=false"
    ]
  }
}
